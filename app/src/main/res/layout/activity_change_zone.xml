<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/beaconrangesw"
    tools:context="com.example.b2026015.bluetooth.rfb.activities.ChangeZoneActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/immediateTF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:textColorHint="#ffffff"
        android:inputType="number"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearTF"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:layout_alignEnd="@+id/immediateTF"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/farTF"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/nearTF"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nearTF"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Values should be in metres"
        android:id="@+id/values"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/newValuesButton"
        android:layout_above="@+id/values"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
