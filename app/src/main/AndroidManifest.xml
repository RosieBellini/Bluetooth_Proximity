<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.b2026015.bluetooth">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/nexttoblue"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".rfb.activities.DeviceActivity" />
        <activity android:name=".rfb.activities.MainActivity" />
        <activity android:name=".rfb.activities.PermissionActivity" />
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".rfb.activities.ChangeZoneActivity" />
        <activity android:name=".rfb.activities.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".rfb.activities.BluetoothActivity" />
        <activity
            android:name=".rfb.activities.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".rfb.activities.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.b2026015.bluetooth.rfb.activities.MenuActivity" />
        </activity>
        <activity android:name=".rfb.activities.HelpActivity" />

        <service
            android:name=".rfb.services.ScanningService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".rfb.activities.FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:parentActivityName=".rfb.activities.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.b2026015.bluetooth.rfb.activities.MenuActivity" />
        </activity>
    </application>

</manifest>